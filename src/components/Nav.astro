---
const { active } = Astro.props;
---

<header class="site-header">
  <a href="/Test-Astro/" class="logo">Orion</a>
  <nav>
    <a href="/Test-Astro/" class={active === "home" ? "active" : ""}>Anasayfa</a>
    <a href="/Test-Astro/blog" class={active === "archive" ? "active" : ""}>Ar≈üiv</a>
  </nav>
  <style>
    .site-header {
      max-width: 1100px;
      margin: 0 auto;
      padding: 14px 20px;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .site-header a {
      color: inherit;
      text-decoration: none;
    }

    .site-header .logo {
      font-weight: 800;
    }

    .site-header nav {
      display: flex;
      gap: 16px;
    }

    .site-header nav a.active {
      text-decoration: underline;
      text-underline-offset: 4px;
    }
  </style>
</header>


