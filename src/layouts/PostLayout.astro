---
import Nav from "../components/Nav.astro";
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title ? `${title} | My Blog` : "My Blog"}</title>

    <!-- KaTeX -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex/dist/katex.min.css" />

    <!-- Inter font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">

    <style>
      :root {
        --wrap: 620px;
        --wrap-wide: 1100px;
        --reading: 52ch;
        --text: #0f172a;
        --muted: #64748b;
      }

      * {
        box-sizing: border-box;
      }

      html, body {
        margin: 0;
        padding: 0;
      }

      body {
        font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        color: var(--text);
        line-height: 1.65;
        background: #fff;
      }

      /* Site header */
      .site-header {
        max-width: var(--wrap-wide);
        margin: 0 auto;
        padding: 14px 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .site-header a {
        color: inherit;
        text-decoration: none;
      }

      .site-header .logo {
        font-weight: 800;
      }

      .site-header nav {
        display: flex;
        gap: 16px;
      }

      /* Main container - ensures everything is centered */
      main {
        max-width: var(--wrap-wide);
        margin: 0 auto;
        padding: 0 16px;
      }

      /* Title block (narrow and centered) */
      .article {
        max-width: var(--reading);
        margin: 0 auto;
        padding: 0 20px 40px;
        /* make the article a centered column so children (h1, meta) are centered
           even if other styles interfere */
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
      }

      .meta-below {
        color: var(--muted);
        font-size: 0.8rem;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        margin-top: 6px;
      }

      .title {
        font-weight: 800;
        line-height: 1.1;
        letter-spacing: -0.02em;
        font-size: clamp(2.125rem, 2.8vw + 1rem, 3.25rem);
        margin: 10px auto 6px;
        max-width: none;
        text-align: center;
      }

      /* Hero image */
      .hero {
        max-width: var(--reading);
        margin: 24px auto 10px;
        padding: 0;
        text-align: center;
      }

      .hero img {
        width: 100%;
        height: auto;
        display: block;
        margin: 0 auto;
        border-radius: 6px;
      }

      .caption {
        color: var(--muted);
        text-align: center;
        font-size: 0.85rem;
        margin-top: 8px;
      }

      /* Reading column */
      .prose {
        max-width: var(--reading);
        margin: 18px auto 0;
        text-align: left;
        font-size: 1.05rem;
        word-break: break-word;
        overflow-wrap: anywhere;
      }

      .prose p {
        margin: 1rem 0;
      }

      .prose h2 {
        font-size: 1.6rem;
        margin: 2.2rem 0 0.8rem;
        line-height: 1.2;
      }

      .prose h3 {
        font-size: 1.3rem;
        margin: 1.8rem 0 0.6rem;
      }

      .prose img {
        max-width: 100%;
        height: auto;
      }

      .prose a {
        color: #0ea5e9;
        text-decoration: underline;
      }

      .prose blockquote {
        margin: 1.2rem 0;
        padding: 0.8rem 1rem;
        background: #f8fafc;
        border-left: 4px solid #e2e8f0;
      }

      .prose code {
        font-family: ui-monospace, SFMono-Regular, Menlo, Consolas, "Liberation Mono", monospace;
        font-size: 0.95em;
        background: #f1f5f9;
        padding: 0.15em 0.35em;
        border-radius: 4px;
      }

      .prose pre {
        overflow: auto;
        background: #0b1220;
        color: #e5e7eb;
        padding: 1rem;
        border-radius: 8px;
      }

      .prose pre code {
        background: transparent;
        padding: 0;
      }

      /* Center display math */
      .prose .katex-display {
        text-align: center;
        margin: 1.5rem 0;
      }

      /* Inline math */
      .prose .katex {
        font-size: 1.05em;
      }

      /* Meta at bottom (kept for compatibility, not used) */
      .meta-bottom { display: none; }
    </style>
  </head>
  <body>
    <Nav />

    <main>
      <slot />
    </main>
  </body>
</html>